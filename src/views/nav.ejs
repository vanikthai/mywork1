<script>
  const x = document.getElementById("myNavbar");

  function myNavbaricon() {
    if (x.className === "navbar") {
      x.className += " responsive";
    } else {
      x.className = "navbar";
    }
  }
  function getCookie(cname) {
    const name = cname + "=";
    const decodedCookie = decodeURIComponent(document.cookie);
    const ca = decodedCookie.split(";");
    for (let i = 0; i < ca.length; i++) {
      let c = ca[i];
      while (c.charAt(0) === " ") {
        c = c.substring(1);
      }
      if (c.indexOf(name) === 0) {
        return c.substring(name.length, c.length);
      }
    }
    return "";
  }
  const i18ncookie = getCookie("i18n");
  if (i18ncookie === "th") {
    document.getElementById("Len").style.display = "block";
    document.getElementById("Lth").style.display = "none";
  } else {
    document.getElementById("Len").style.display = "none";
    document.getElementById("Lth").style.display = "block";
  }

  const nav_links = document.querySelectorAll(".nav-link");
  nav_links.forEach((nav_link) => {
    nav_links.forEach((link) => {
      if (link.dataset.link === window.location.pathname) {
        link.classList.add("active");
      } else {
        link.classList.remove("active");
      }
    });
  });
</script>
